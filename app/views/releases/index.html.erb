<%- model_class = Release -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:version) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%= model_class.human_attribute_name(:end_date) %></th>
      <th><%= model_class.human_attribute_name(:project_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td><%= link_to release.id, release_path(release) %></td>
        <td><%= release.version %></td>
        <td><%= release.start_date %></td>
        <td><%= release.end_date %></td>
        <td><%= release.project_id %></td>
        <td><%=l release.created_at %></td>

        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                            release_path(release), :class => 'btn btn-mini' %>
          <% if can? :manage, release %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_release_path(release), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        release_path(release),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

